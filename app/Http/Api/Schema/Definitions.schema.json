{
    "$schema" : "http://json-schema.org/draft-07/schema#",
    "definitions" : {
        "arrayDef" : {
            "type" : "array"
        },
        "dateTimeDef" : {
            "type"    : "string",
            "pattern" : "^[0-9]{4}(-[0-9]{2}){2}( [0-9]{2}(:[0-9]{2}){2})?$"
        },
        "dateTimeNullDef" : {
            "type"    : ["string","null"],
            "pattern" : "^[0-9]{4}(-[0-9]{2}){2}( [0-9]{2}(:[0-9]{2}){2})?$"
        },
        "booleanDef": {
            "type"    : ["integer", "string"],
            "minimum" : 0,
            "maximum": 1,
            "pattern" : "^[01]$"
        },
        "integerUnsignedDef" : {
            "type"    : "integer",
            "minimum" : 0
        },
        "integerUnsignedNullDef" : {
            "type"    : ["integer","null"],
            "minimum" : 0
        },
        "phoneNumberDef" : {
            "type"   : "string",
            "maxLength" : 20
        },
        "stringArrayDef" : {
            "type"  : "array",
            "items" : {"$ref" : "#/definitions/stringDef"}
        },
        "stringArrayNullDef" : {
            "type"  : ["array","null"],
            "items" : {"$ref" : "#/definitions/stringDef"}
        },
        "stringDef" : {
            "type"      : "string",
            "minLength" : 1
        },
        "stringNullDef" : {
            "type" : [
                "string",
                "null"
            ]
        },
        "stringNumberDef" : {
            "type" : [
                "string",
                "number"
            ]
        },
        "stringNumberNullDef" : {
            "type" : [
                "string",
                "number",
                "null"
            ]
        },

        "sortCodeDef" : {
            "type"    : "string",
            "pattern" : "^[0-9]{2}(-?[0-9]{2}){2}$"
        },

        "accountNumberDef" : {
            "type"    : "string",
            "pattern" : "^[0-9]{8}$"
        }
    }
}
